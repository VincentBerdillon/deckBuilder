<%- include('header') %>


<div class="cardsContainer">
  <% cardsDeck.forEach( (card) => { %>

    <div class="card">
      <a href="/card/<%= card.id %>">
        <img src="/visuals/<%= card.visual_name %>" alt="<%= card.name %> illustration">
        <p class="cardName"><%= card.name %></p>
      </a>
      <a class="link--delCard" title="Supprimer du deck" href="/delete_deck/<%= card.id %>">[ - ]</a>
    </div>

  <% }) %>
</div>


<%- include('footer') %>